<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="faq" resource="default" engine="innodb" comment="faq de QA">
        <column xsi:type="int" name="faq_id" unsigned="true" nullable="false" identity="true"
                    comment="Entity ID faq"/>
        <column xsi:type="int" name="customer_id" unsigned="true" nullable="true" identity="false"
                    comment="Customer ID"/>
        <column xsi:type="varchar" name="question" nullable="true" length="200" comment="question column"/>
        <column xsi:type="varchar" name="answer" nullable="true" length="1000" comment="answer column"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                   comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                    comment="Updated At"/>


        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="faq_id"/>
        </constraint>
            <constraint xsi:type="foreign" referenceId="FAQ_CUSTOMER_ID_CUSTOMER_ENTITY_ENTITY_ID" table="faq"
                        column="customer_id" referenceTable="customer_entity" referenceColumn="entity_id"
                        onDelete="SET NULL"/>
    </table>
</schema>
