<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="pet" resource="default" engine="innodb" comment="Pet table">
        <column xsi:type="int" name="pet_id" unsigned="true" nullable="false" identity="true"
            comment="Entity ID"/>
        <column xsi:type="int" name="customer_id" unsigned="true" nullable="true" identity="false"
            comment="Customer ID"/>
        <column xsi:type="varchar" name="pet_name" nullable="true" length="128" comment="pet name column"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
            comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
            comment="Updated At"/>


        <!-- cuando termina de configurar las columnas se generan las primary key and foreing key -->
        <!-- onDelete="SET NULL"  seteara esa columna como nulo  -->
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="pet_id"/>
        </constraint>
        <!--creas referenceId-> cambias al pet y table-> nombre de la tabla -->
        <constraint xsi:type="foreign" referenceId="PET_CUSTOMER_ID_CUSTOMER_ENTITY_ENTITY_ID" table="pet"
                    column="customer_id" referenceTable="customer_entity" referenceColumn="entity_id"
                    onDelete="SET NULL"/>

    </table>
</schema>
